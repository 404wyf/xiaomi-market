.customer {
    width: 80vw;
    margin: 0 auto;
  }
  .customer image {
    width: 18vw;
    height: 16vw;
    display: block;
    margin: 0 auto;
    margin-top: 16vw;
  }
  .title{
    font-size: 6vw;
    margin-top: 4vw;
    margin-bottom: 10vw;
    color: rgb(14, 13, 13);
    text-align: left;
  }
   .logoText{
    font-size: 4vw;
    font-weight: 700;
    margin-top: 4vw;
    color: rgba(51, 51, 51, 0.178);
    text-align: center;
    font-family: 'Times New Roman', Times, serif;
  }
  .phone, .password {
    position: relative;
    height: 12vw; 
    margin-top: 5vw;
    border-radius: 4vw;
    font-size: 3.6vw;
    box-sizing: border-box;
    padding: 0 4vw;
    border: 1px solid rgba(0, 0, 0, 0.5);
  }
  input {
    position: relative;
    left: 0vw;
    width: 100%;
    height: 100%;
  }
 
  .btn {
    margin-top: 10vw;
  }
  .btn button {
    margin-top: 4vw;
    
  }
  .btn .sign {
    background-color: #139ddd;
    color: #fff;
  }
  .btn .register {
    background-color: #2cd116;
    color: #fff;
  }