<view class="myInformation">

  <view class="content">
    <image src="/public/images/logo.png" class="touxiang"></image>
    <view class="info-item">
      <text class="label">姓名：</text>
      <text class="value">{{customer.customerName}}</text>
    </view>
    <view class="info-item">
      <text class="label">电话：</text>
      <text class="value">{{customer.telId}}</text>
    </view>
    <view class="info-item">
      <text class="label">收货地址：</text>
      <text class="value">{{address.address}}</text>
    </view>
    <view class="info-item">
      <text class="label">个性签名：</text>
      <text class="value">{{customer.signature}}</text>
    </view>
  </view>

  <view class="button-container">
    <button class="btn" bindtap="Logout">退出</button>
  </view>
</view>