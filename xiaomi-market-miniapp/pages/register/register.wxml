<view class="container">
  <view class="header">
    <image src="/public/images/logo.png"></image>
    <text>让每个人都能享受科技的乐趣</text>
  </view>

  <view class="section">
    <text class="title">小米账号登录</text>
    <view class="box">
      <input type="text" placeholder="请输入手机号" bindinput="bindTelIdInput"/>
    </view>
    <view class="box">
      <input type="password" placeholder="请输入密码" bindinput="bindPasswordInput"/>
    </view>
    <view class="box">
      <input type="text" placeholder="请输入姓名" bindinput="bindCustomerNameInput"/>
    </view>
    <view class="box">
      <input type="text" placeholder="请输入地址" bindinput="bindAddressInput"/>
    </view>
    
    <view class="btn register" bindtap="registerCustomer">注 册</view>
    <view class="btn" bindtap="toLogin">去登录</view>

    <view style="width: 100%; height: 14.4vw;"></view>
  </view>
</view>