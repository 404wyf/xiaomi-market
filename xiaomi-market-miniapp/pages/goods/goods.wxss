.goods {
    width: 100%;
    height: 100%;
  }
  image {
    width: 70%;
    height: 70vw;
    display: block;
    margin: 0 auto;
  }
  .box {
    width: 80%;
    margin: 0 auto;
  }
  .box .price {
    font-size: 6.4vw;
    color: #FF6700;
    font-weight: 700;
  }
  .box .price text {
    font-size: 4.4vw;
    vertical-align: top;
  }
  .box .name {
    font-size: 4.4vw;
    font-weight: 700;
    margin: 3vw 0;
    color: #666;
  }
  .box .content {
    font-size: 3.4vw;
    color: #888;
  }
  .addcartBtn {
    width: 60%;
    height: 10vw;
    border-radius: 5vw;
    background-image: linear-gradient(to right,#Ff9E22,#ff6700);
    margin: 6vw auto;
    text-align: center;
    line-height: 10vw;
    font-size: 4vw;
    font-weight: 700;
    color: #FFF;
  }
  .selectcartBtn {
    width: 60%;
    height: 10vw;
    border-radius: 5vw;
    margin: 6vw auto;
    text-align: center;
    line-height: 10vw;
    font-size: 4vw;
    font-weight: 700;
    color: #FF6700;
  }