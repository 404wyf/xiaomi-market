.index {
    width: 100%;
    height: 100%;
  }
  .left {
    width: 20%;
    /* 固定定位 */
    position: fixed;
  }
  .left .item {
    text-align: center;
    font-size: 3.3vw;
    font-weight: 300;
    color: #666;
    margin-bottom: 10vw;
  }
  .select-item {
    font-weight: 700 !important;
    color: #333 !important;
    border-left: 3px solid #FF6700;
  }
  .right {
    width: 80%;
    margin-left: 20%;
    box-sizing: border-box;
    padding-right: 4vw;
    /* overflow: hidden; */
  }
  .right image {
    width: 100%;
    height: 21vw;
    border-radius: 1vw;
  }
  .right .title {
    font-size: 4vw;
    color: #333;
    margin-top: 5vw;
    font-weight: 700;
  }
  .right .goods {
    width: 100%;
    height: 20vw;
    margin: 2vw 0;
    background-color: #F8F8F8;
    border-radius: 1vw;
    display: flex;
    align-items: center;
  }
  .right .goods image {
    width: 18vw;
    height: 18vw;
  }
  .right .content {
    margin-left: 2vw;
    font-style: 3.8vw;
    color: #333;
  }
  .right .content .name {
    font-weight: 700;
    margin-bottom: 2.4vw;
  }